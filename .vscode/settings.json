{
    "editor.tabSize": 2,
    "editor.rulers": [80, 140],
    "files.exclude": {
      "**/*.map": false,
      "node_modules/": true
    },
    "[jsonc]": {
      "editor.tabSize": 2,
      "editor.rulers": [140],
      "files.trimTrailingWhitespace": true,
      "files.insertFinalNewline": true
    },
    "[javascript]": {
      "editor.tabSize": 2,
      "editor.rulers": [140],
      "files.trimTrailingWhitespace": true,
      "files.insertFinalNewline": true,
      "editor.detectIndentation": false
    },
    "[typescript]": {
      "editor.tabSize": 2,
      "editor.rulers": [140],
      "files.trimTrailingWhitespace": true,
      "files.insertFinalNewline": true,
      "editor.detectIndentation": false
    },
    "[vue]": {
      "editor.tabSize": 2,
      "editor.rulers": [140],
      "files.trimTrailingWhitespace": true,
      "files.insertFinalNewline": true,
      "editor.detectIndentation": false
    },
    "[vue-html]": {
      "editor.tabSize": 2,
      "editor.rulers": [140],
      "files.trimTrailingWhitespace": true,
      "files.insertFinalNewline": true,
      "editor.detectIndentation": false
    },
    "editor.codeLens": false,
    "gitlens.codeLens.enabled": false,
    // "terminal.integrated.fontFamily": "Menlo for Powerline",
    // "terminal.integrated.shell.linux": "/bin/zsh"
}
